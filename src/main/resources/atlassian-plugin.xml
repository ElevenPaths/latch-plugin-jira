<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="latch-plugin-jira"/>
    
    <!-- add our web resources -->
    <web-resource key="latch-plugin-jira-resources" name="latch-plugin-jira Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="css/" location="css/"/>
        <resource type="download" name="images/" location="images/"/>
        <context>latch-plugin-jira</context>
    </web-resource>

    <webwork1 key="newViews" name="Views" class="java.lang.Object">
        <actions>
            <action name="com.elevenpaths.latch.servlets.Admin" alias="LatchConfigure">
                <view name="success">/templates/com/elevenpaths/latch/servlets/configure.vm</view>
            </action>

            <action name="com.elevenpaths.latch.servlets.Index" alias="LatchIndex">
                <view name="success">/templates/com/elevenpaths/latch/servlets/info.vm</view>
            </action>

            <action name="com.elevenpaths.latch.servlets.Pair" alias="LatchPair">
                <view name="success">/templates/com/elevenpaths/latch/servlets/pair.vm</view>
            </action>

            <action name="com.elevenpaths.latch.servlets.Unpair" alias="LatchUnpair">
                <view name="success">/templates/com/elevenpaths/latch/servlets/unpair.vm</view>
            </action>
            <action name="com.elevenpaths.latch.servlets.Otp" alias="LatchTwoFactor">
                <view name="success">/templates/com/elevenpaths/latch/servlets/otp.vm</view>
            </action>
            <action name="com.elevenpaths.latch.servlets.Error" alias="LatchError">
                <view name="success">/templates/com/elevenpaths/latch/servlets/error.vm</view>
            </action>
        </actions>
    </webwork1>   

    <!--
    <web-panel key="custom-user-details" location="webpanels.user.profile.summary.details" weight="100">
        <resource name="view" type="velocity" location="view/details-profile.vm"/>
        <context-provider class="com.elevenpaths.latch.servlets.Index"/>
    </web-panel>
    
    <web-section key="latch-index" location="webpanels.user.profile.summary.details">
        <label>Latch</label> 
    </web-section>

    <web-item key="latch-info" name="Link to Latch info" section="webpanels.user.profile.summary.details/latch-index">
        <label>Latch</label>
        <link linkId="my_links_link" absolute="false">/secure/LatchIndex.jspa</link>
    </web-item>
    -->

    <web-item key="latch-info" name="Link to Latch info" section="system.user.options/personal" >
        <label>Latch</label>
        <link linkId="my_links_link" absolute="false">/secure/LatchIndex.jspa</link>
    </web-item>

    <web-section key="latch-section" location="system.admin">
        <label>Latch</label> 
    </web-section>

    <web-item key="latch-configure" name="Link to Latch settings" section="system.admin/latch-section">
        <label>Configure Latch</label>
        <link linkId="latch-configure" absolute="false">/secure/LatchConfigure.jspa</link>
    </web-item>
    
    
    <component-import key="eventPublisher" interface="com.atlassian.event.api.EventPublisher"/>
    <component key="login" class="com.elevenpaths.latch.listener.Login">
        <description>Class that processes the incoming JIRA user events.</description>
    </component>
    
    <!-- import from the product container -->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
    <component-import key="userManager" interface="com.atlassian.sal.api.user.UserManager"/>
    <component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory"/>
    <component-import key="i18nResolver" interface="com.atlassian.sal.api.message.I18nResolver"/>
    <component-import key="velocityTemplateRenderer" interface="com.atlassian.templaterenderer.velocity.one.six.VelocityTemplateRenderer"/>
</atlassian-plugin>